  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.modello</groupId>
        <artifactId>modello-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>nexus.xml</id>
            <goals>
              <goal>java</goal>
              <goal>xpp3-reader</goal>
              <goal>xpp3-writer</goal>
            </goals>
            <configuration>
              <useJava5>true</useJava5>
              <version>2.8.0</version>
              <models>
                <model>src/main/mdo/nexus.xml</model>
              </models>
            </configuration>
          </execution>

        </executions>
        <configuration>
          <packageWithVersion>false</packageWithVersion>
        </configuration>
      </plugin>

      <!--
      FIXME: Get rid of test-jar, these artifacts cause problems with transitive dependencies.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <!-- include the OSGi JDBC compendium package as it's needed by H2 -->
            <Export-Package>{local-packages},org.osgi.service.jdbc</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

